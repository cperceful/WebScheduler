@using WebScheduler.Models.AdminViewModels
@model EditShiftViewModel

@{ViewBag.Title = $"Edit shift for {Model.User.Name} on {Model.Day}";}

<h1>@ViewBag.Title</h1>

<form asp-contoller="admin" asp-action="editshift" asp-route-id="@Model.ShiftId" method="post">
    <div class="form-group">
        <input class="form-control" asp-for="StartTime" type="time" />
        <span asp-validation-for="StartTime" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input class="form-control" asp-for="EndTime" type="time" />
        <span asp-validation-for="EndTime" class="text-danger"></span>
    </div>
    <input type="hidden" asp-for="ShiftId" />
    <input type="hidden" asp-for="ScheduleId" />
    <input type="submit" value="Save Changes" class="btn" />
</form>

<form asp-controller="admin" asp-action="deleteshift" asp-route-id="@Model.ShiftId" method="post">
    <input type="hidden" asp-for="ScheduleId" />
    <input type="submit" class="btn-danger" value="Delete Shift" />
</form>